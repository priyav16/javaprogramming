import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        int num=sc.nextInt();
        if(num<100){
            System.out.println("Invalid Input");
            }
        else
        {
            int sum=0;
            while(num>0){
                sum=sum+num%10;
                num=num/10;
            }
            System.out.println("Sum of digit is "+sum);
        }
    }
}
