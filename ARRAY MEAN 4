import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        int size=sc.nextInt();
        int arr[]=new int[size];
        float sum=0;
        for(int i=0;i<size;i++){
            arr[i]=sc.nextInt();
        }
        {
            for(int i=0;i<size;i++)
            sum=sum+arr[i];
             System.out.printf("Array Mean Value is %.2f",(sum/size));
        }
    }
}
